<div class="container center-content" style="padding: 0">
    <h1 class="statistics-header-padding">Settings</h1>

    <form action="/configure">

      <div class="form-group">
        <label for="serverID">Select a Server</label>
        <div>
          <select id="serverID" name="serverID" aria-describedby="serverIDHelpBlock" required="required" class="custom-select">
              {{#each servers}}
                  <option value="{{id}}">{{name}} </option>
              {{/each}}          </select>
          <span id="serverIDHelpBlock" class="form-text text-muted">Select a server to configure</span>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-4 col-8">
          <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
<br>
      {{profile}}
</div>
